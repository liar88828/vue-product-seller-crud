model Market {
    id             Int          @id @default(autoincrement())
    name           String?
    industry       String?
    address        String?
    description    String?
    mission        String?
    vision         String?
    history        String?
    since          DateTime     @default(now())
    // 
    // Order          Order[]
    // Additional     Additional[]
    Product        Product[]
    // 
    Contact        Contact?     @relation(fields: [id_contact], references: [id])
    id_contact     Int?         @unique
    // 
    SocialMedia    SocialMedia? @relation(fields: [id_socialMedia], references: [id])
    id_socialMedia Int?         @unique
    // 

    // 
    Follow      Follow?       @relation(fields: [id_follow], references: [id])
    id_follow   Int?
    Transaction Transaction[]
    User        User?
    Additional  Additional[]
}

model Role {
    id   String @id @default("USER")
    User User[]
}

model Contact {
    id      Int     @id @default(autoincrement())
    email   String
    phone   String
    website String
    Market  Market?
}

model SocialMedia {
    id        Int     @id @default(autoincrement())
    instagram String
    facebook  String
    twitter   String
    whatsapp  String
    Market    Market?
}

model Additional {
    id        Int     @id @default(autoincrement())
    text      String
    Market    Market? @relation(fields: [id_market], references: [id])
    id_market Int?
}
